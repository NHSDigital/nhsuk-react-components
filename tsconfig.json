{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "lib",
        "module": "esnext",
        "target": "ES6",
        "lib": ["es5", "es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "types": ["react", "jest", "node"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "build",
        "stories/*.stories.tsx",
        "stories/**/*.stories.tsx",
        "src/**/*.test.tsx",
        "src/**/*.test.ts",
        "src/__mocks__",
        "src/setupTests.ts"
    ]
}
